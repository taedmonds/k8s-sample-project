{
    "id": "data-platform-dashboard-1",
    "uid": "data-platform-dashboard-1-uid",
    "title": "Data Platform CPU & Memory Dashboard",
    "tags": ["kubernetes", "cpu", "memory", "data-platform"],
    "timezone": "browser",
    "schemaVersion": 37,
    "version": 1,
    "refresh": "30s",
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "templating": {
        "list": [
            {
                "name": "namespace",
                "type": "query",
                "label": "Namespace",
                "query": "label_values(kube_pod_info, namespace)",
                "current": {
                    "text": "data-platform",
                    "value": "data-platform"
                },
                "includeAll": true,
                "multi": false,
                "refresh": 1
            }
        ]
    },
    "panels": [
        {
            "type": "graph",
            "title": "Minio CPU Usage",
            "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
            "targets": [
                {
                    "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", pod=~\"data-platform-minio-.*\"}[5m])) by (pod)",
                    "legendFormat": "{{pod}}",
                    "refId": "A"
                }
            ],
            "yaxes": [
                { "format": "cores", "label": "CPU Cores", "logBase": 1, "min": 0 },
                { "format": "short", "label": "", "logBase": 1, "min": null }
            ]
        },
        {
            "type": "graph",
            "title": "Minio Memory Usage",
            "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
            "targets": [
                {
                    "expr": "sum(container_memory_usage_bytes{namespace=\"$namespace\", pod=~\"data-platform-minio-.*\"}) by (pod)",
                    "legendFormat": "{{pod}}",
                    "refId": "A"
                }
            ],
            "yaxes": [
                { "format": "bytes", "label": "Memory", "logBase": 1, "min": 0 },
                { "format": "short", "label": "", "logBase": 1, "min": null }
            ]
